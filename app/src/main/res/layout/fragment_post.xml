<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PostFragment">

    <EditText
        android:id="@+id/userIdEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:hint="Enter User Id"
        android:imeOptions="actionNext"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/postIddEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Enter Id"
        android:imeOptions="actionNext"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/userIdEt"
        app:layout_constraintStart_toStartOf="@+id/userIdEt"
        app:layout_constraintTop_toBottomOf="@+id/userIdEt" />

    <EditText
        android:id="@+id/postTitleEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Enter Post Title"
        android:imeOptions="actionNext"
        android:inputType="textCapWords"
        app:layout_constraintEnd_toEndOf="@+id/postIddEt"
        app:layout_constraintStart_toStartOf="@+id/postIddEt"
        app:layout_constraintTop_toBottomOf="@+id/postIddEt" />

    <EditText
        android:id="@+id/postBodyEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Enter Body Text"
        android:imeOptions="actionDone"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/postTitleEt"
        app:layout_constraintStart_toStartOf="@+id/postTitleEt"
        app:layout_constraintTop_toBottomOf="@+id/postTitleEt" />

    <Button
        android:id="@+id/uploadPostBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Upload Post"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/postBodyEt"
        app:layout_constraintStart_toStartOf="@+id/postBodyEt"
        app:layout_constraintTop_toBottomOf="@+id/postBodyEt" />


</androidx.constraintlayout.widget.ConstraintLayout>