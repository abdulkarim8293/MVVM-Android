<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mvvm_android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MVVMAndroid">
        <activity
            android:name=".sharedpreferences.HomeActivity"
            android:exported="true"
            android:theme="@style/Theme.MVVMAndroid.NoActionBar"/>
        <activity
            android:name=".sharedpreferences.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.MVVMAndroid.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".bottom_navigation.BottomNavigationActivity"
            android:exported="true"
            android:theme="@style/Theme.MVVMAndroid.NoActionBar">
            
        </activity>
        <activity
            android:name=".view_pager.ViewPagerActivity"
            android:exported="true"
            android:theme="@style/Theme.MVVMAndroid.NoActionBar" />
        <activity
            android:name=".NavigationDrawerActivity"
            android:exported="true"
            android:label="@string/title_activity_navigation_drawer"
            android:theme="@style/Theme.MVVMAndroid.NoActionBar" />
        <activity
            android:name=".to_do_list.UpdateToDoActivity"
            android:exported="true" />
        <activity
            android:name=".to_do_list.AddToDoActivity"
            android:exported="true" />
        <activity
            android:name=".UserDetailsActivity"
            android:exported="true" />
        <activity
            android:name=".AddUserActivity"
            android:exported="true"
            android:label="@string/title_activity_add_user"
            android:theme="@style/Theme.MVVMAndroid.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".to_do_list.ToDoListActivity"
            android:exported="true" />
    </application>

</manifest>